<h2>Supporters</h2>

<div class="row">
  <div class="table table-striped">
    <table>
      <thead>
        <tr>
          <th>Amount</th>
          <th>Supporter</th>
        </tr>
      </thead>
      <tbody>
        <% @pledges.each do |pledge| %>
          <tr>
            <td>$<%= pledge.amount %></td>
            <td><%= pledge.user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
