<h1><%= link_to @campaign.name, @campaign %> </h1>

<% if flash[:errors] %>
  <div class="alert alert-danger">
    <ul>
      <% flash[:errors].each do |error| %>
        <%= content_tag :li, error %>
      <% end %>
    </ul>
  </div>
  <% end %>

<%= form_for [@campaign, @pledge] do |f|%>
  <%= f.label :amount %>
  <%= f.number_field :amount %>
  <%= f.submit "Give" %>
<% end %>
